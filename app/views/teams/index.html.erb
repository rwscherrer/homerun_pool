<h1> <%= link_to("Create A New Team", "/teams/new", :class => "btn btn-success") %>
</h1>
<hr>

<div>

  <% @teams.order(score: :desc).each do |team| %>
    <h2> <%= link_to(team.team_name, "/team/#{team.id}") %> Total: <%= team.player_1_data[0].to_i + team.player_2_data[0].to_i +  team.player_3_data[0].to_i + team.player_4_data[0].to_i + team.player_5_data[0].to_i + team.player_6_data[0].to_i + team.player_7_data[0].to_i + team.player_8_data[0].to_i + team.player_9_data[0].to_i %> </h2>
  <% end %>
</div>

<hr>

<span class="counter pull-left" ></span>

<h5>Once all teams have been created you will be able to view them.</h5>
<table class="table table-hover results" >
 <thead>
   <tr>
     <th> Team Name </th>
     <th> Coach </th>
     <th> Score </th>
   </tr>
 </thead>
<% @all_teams.order(score: :desc).each do |team| %>
 <tbody>
   <tr>
     <td>
       <%= team.team_name %>
     </td>
     <td>
     <%= User.find_by(id: team.user_id).email %>
     </td>
     <td>
       <%= team.score %>
    </td>
   </tr>
 </tbody>
<% end %>
</table>

<hr>







