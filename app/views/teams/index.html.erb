<h1> <%= link_to("Create A New Team", "/teams/new", :class => "btn btn-success") %>
</h1>
<hr>

<div>

<%= @players %>
  
  <% @teams.each do |team| %>
    <h2> <%= link_to(team.team_name, "/team/#{team.id}") %> Total: <%= @team_score %> </h2>
  <% end %>
</div>
<hr>
<span class="counter pull-left" ></span>
<table class="table table-hover results" >
 <thead>
   <tr>
     <th> Name </th>
     <th> Score</th>
   </tr>
 </thead>
 <% @team_score = [] %>
<% @all_teams.each do |team| %>
 <tbody>
   <tr>
     <td>
       <%= link_to(team.team_name, "/team/#{team.id}") %>
     </td>
     <td>
       <%= team.score %> 
    </td>
   </tr>
 </tbody>
<% end %>
</table>

<hr>







