<h3>Overall Standings</h3>
<h5> - Click A Team Name To See It's Players - </h5>
<table class="table table-condensed" >
 <thead>
   <tr>
     <th> Rank </th>
     <th> Team Name </th>
     <th> Score </th>
     <th> Coach </th>
   </tr>
 </thead>
 <% @team_count = 1 %>
 <% @all_teams.order(score: :desc).each do |team| %>
 <tbody>
   <tr>
     <td>
      <%= @team_count %>
     </td>
     <td>
       <%= link_to(team.team_name, "/team/#{team.id}", :class => "btn btn-primary") %>
     </td>
     <td>
       <%= Player.find_by(name: team.player_1).home_runs_2017 + Player.find_by(name: team.player_2).home_runs_2017 +  Player.find_by(name: team.player_3).home_runs_2017 + Player.find_by(name: team.player_4).home_runs_2017+ Player.find_by(name: team.player_5).home_runs_2017 + Player.find_by(name: team.player_6).home_runs_2017 + Player.find_by(name: team.player_7).home_runs_2017 + Player.find_by(name: team.player_8).home_runs_2017 + Player.find_by(name: team.player_9).home_runs_2017 %>
    </td>
     <td>
      <%= User.find_by(id: team.user_id).email %>
     </td>
   </tr>
 </tbody>
 <% @team_count += 1 %>
<% end %>
</table>


